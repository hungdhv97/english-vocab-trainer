# Production Environment Configuration
APP_ENV=production

# PostgreSQL Production Settings
APP_POSTGRES_HOST=postgres
APP_POSTGRES_PORT=5432
APP_POSTGRES_USER=vocab_prod_user
APP_POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_123!@#
APP_POSTGRES_DATABASE=vocab_prod
POSTGRES_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD_456$%^

# Authentication - Use a strong JWT secret (minimum 64 characters)
APP_JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_FOR_PRODUCTION_MINIMUM_64_CHARS_LONG

# DeepL Translation API
APP_DEEPL_APIKEY=82aa2c21-9d7b-49c6-9149-7382172e07cd:fx

# Redis Production Settings
APP_REDIS_ADDR=redis:6379
APP_REDIS_USERNAME=default
APP_REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_789&*(

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD_abc!@#

# Application Configuration
APP_LOG_LEVEL=info
APP_RATE_LIMIT_REQUESTS_PER_MINUTE=100
APP_CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database Performance Settings
APP_DB_MAX_OPEN_CONNS=25
APP_DB_MAX_IDLE_CONNS=25
APP_DB_CONN_MAX_LIFETIME=300s

# Redis Performance Settings
APP_REDIS_POOL_SIZE=10
APP_REDIS_MIN_IDLE_CONNS=5

# Security Settings
APP_BCRYPT_COST=12
APP_SESSION_TIMEOUT=24h
APP_COOKIE_SECURE=true
APP_COOKIE_HTTP_ONLY=true
APP_COOKIE_SAME_SITE=strict

# SSL/TLS Configuration (if using custom certificates)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_INTERVAL=1m
